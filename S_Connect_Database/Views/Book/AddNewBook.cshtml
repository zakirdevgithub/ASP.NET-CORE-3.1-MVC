@model Book

    <div class="container">
        <p class="display-4">@ViewBag.Message</p>

        @if (ViewBag.IsSuccess)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Successfully Added Book!</strong> <a asp-controller="Book" asp-action="GetBookById" asp-route-id="@ViewBag.Id">here</a> is details of this book
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <form method="post" asp-controller="Book" asp-action="AddNewBook">
            <div class="form-group">
                <label asp-for="Title">Book Title</label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Author">Author Name</label>
                <input type="text" asp-for="Author" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <input type="text" asp-for="Category" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TotalPage">Total Page</label>
                <input type="number" asp-for="TotalPage" class="form-control" />
            </div>
            <div>
                <input type="submit" class="btn btn-warning" />
            </div>
        </form>

    </div>
<br /><br /><br />

