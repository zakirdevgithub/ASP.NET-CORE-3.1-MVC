@using M_Dynamic_Page.Models
@model IEnumerable<Book>

@{
    ViewData["Title"] = "GetAllBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*Card Start*@
<div class="container ">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">

                <div class="card shadow-sm" style="height:450px;">
                    <img src="~/images/Mountain.jpg" class="card-img" />
                    <div class="card-body">
                        <h4 class="card-title text-center">@item.Title</h4>
                        <p class="card-text text-center">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6">
                                <a href="/Book/GetBookById/@item.Id" class="btn btn-warning text-left">View Details</a>
                            </div>
                            <div class="col-6">
                                <p class="text-right">@item.Author</p>
                            </div>
                        </div>

                    </div>
                </div><br />

               

            </div>
        }


        </div>
</div>
<br />
<br />
<br />
@*Card End*@

